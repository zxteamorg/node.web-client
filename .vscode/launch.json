{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Tests",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "compile:test:ts",
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"stopOnEntry": false,
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"--no-timeouts",
				"--colors",
				"--debug-brk",
				"test/**/*.js"
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development"
			},
			"console": "internalConsole",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/src/**/*.js",
				"${workspaceRoot}/test/**/*.js"
			]
		}
	]
}
